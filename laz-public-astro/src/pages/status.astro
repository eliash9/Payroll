---
import Layout from '../layouts/Layout.astro';
import CheckStatusForm from '../components/CheckStatusForm';
---

<Layout title="Cek Status Permohonan - LAZ Sidogiri">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-bold text-slate-900 mb-4">Cek Status Permohonan</h1>
            <p class="text-slate-600">
                Masukkan Kode Tiket dan NIK Anda untuk melihat perkembangan terbaru dari permohonan bantuan Anda.
            </p>
        </div>

        <CheckStatusForm client:load />
    </div>
</Layout>
