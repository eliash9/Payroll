---


import Layout from '../../layouts/Layout.astro';
import { Calendar, MapPin, Users, Info, Clock, Archive } from 'lucide-react';
import { fetcher } from '../../lib/api';
import { format } from 'date-fns';
import { id } from 'date-fns/locale';



// Fetch data on the server
let programs = [];
let error = null;

try {
  const response = await fetcher('/programs');
  programs = response.data;
} catch (e) {
  console.error("Error fetching programs:", e);
  error = "Gagal memuat data program.";
}

// Helper to format recipient type label
const getRecipientLabel = (type: string) => {
    if (type === 'individual') return 'Individu';
    if (type === 'organization') return 'Lembaga';
    return 'Individu & Lembaga';
}
---

<Layout title="Program Bantuan - LAZ Sidogiri">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="mb-12">
            <h1 class="text-3xl font-bold text-slate-900 mb-4">Program Bantuan</h1>
            <p class="text-slate-600 max-w-2xl">
                Pilih program bantuan yang sesuai dengan kebutuhan Anda. Pastikan Anda membaca syarat dan ketentuan sebelum mengajukan permohonan.
            </p>
        </div>

        {error && (
            <div class="bg-red-50 text-red-700 p-4 rounded-lg mb-8 border border-red-200">
                <p>{error}</p>
            </div>
        )}


        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {programs.map((program: any) => (
                <div class="bg-white rounded-2xl border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col group">
                    <div class="p-6 flex-grow">
                        <div class="inline-block px-3 py-1 rounded-full bg-laz-green-50 text-laz-green-700 text-xs font-medium mb-4 uppercase tracking-wide">
                            {program.category}
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3">{program.name}</h3>
                        <p class="text-slate-600 text-sm mb-6 line-clamp-3">
                            {program.description}
                        </p>

                        <div class="space-y-3">
                            <div class="flex items-center gap-3 text-sm text-slate-500">
                                <MapPin className="w-4 h-4 text-slate-400" />
                                <span>Cakupan: {program.coverage_scope}</span>
                            </div>
                            <div class="flex items-center gap-3 text-sm text-slate-500">
                                <Users className="w-4 h-4 text-slate-400" />
                                <span>Penerima: {getRecipientLabel(program.allowed_recipient_type)}</span>
                            </div>
                        </div>
                    </div>

                    <div class="p-6 border-t border-slate-50 bg-slate-50/50 rounded-b-2xl">

                        {program.active_periods && program.active_periods.length > 0 ? (
                            <div class="space-y-4">
                                <div class="bg-white rounded-xl border border-slate-200 divide-y divide-slate-100">
                                    {program.active_periods.map((period: any) => (
                                        <div class="p-3 text-sm">
                                            <div class="flex justify-between items-start mb-2">
                                                <span class="font-medium text-slate-900">{period.name}</span>
                                                <span class="text-xs px-2 py-0.5 bg-laz-green-50 text-laz-green-700 rounded-full font-medium whitespace-nowrap">
                                                    Kuota: {period.quota ? period.quota : 'âˆž'}
                                                </span>
                                            </div>
                                            <div class="grid grid-cols-1 gap-1 text-slate-500 text-xs">
                                                 <div class="flex items-center gap-1.5">
                                                    <Clock className="w-3 h-3 text-slate-400" />
                                                    <span>

                                                    <span>
                                                        {(period.start_date && period.end_date) ? (
                                                            `${format(new Date(period.start_date), 'd MMM yyyy', { locale: id })} - ${format(new Date(period.end_date), 'd MMM yyyy', { locale: id })}`
                                                        ) : (
                                                            'Tanggal belum ditentukan'
                                                        )}
                                                    </span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    ))}
                                </div>

                                <a
                                    href={`/apply?programId=${program.id}`}
                                    class="block w-full text-center bg-laz-green-500 hover:bg-laz-green-600 text-white font-medium py-2.5 rounded-lg transition-colors shadow-sm shadow-laz-green-900/10"
                                >
                                    Ajukan Sekarang
                                </a>
                            </div>

                        ) : (
                            <div class="text-center py-2">
                                <span class="text-slate-400 text-sm font-medium">Belum ada periode aktif</span>
                            </div>
                        )}
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>
